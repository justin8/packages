# Maintainer: Josh McGee <josh.s.mcgee@gmail.com>
# Contributor: Earnestly <zibeon@gmail.com>

pkgname=shellcheck
pkgver=0.3.4
pkgrel=1
pkgdesc="A shell script static analysis tool: Stable Release"
arch=(i686 x86_64)
url=http://www.shellcheck.net/
license=('AGPL3')
depends=('gmp')
makedepends=(
	'ghc'
	'haskell-json'
	'haskell-mtl'
	'haskell-parsec'
	'haskell-quickcheck'
	'haskell-regex-compat')
source=("https://github.com/koalaman/shellcheck/archive/v$pkgver.tar.gz")
md5sums=('0e365ffff4a74347d0df2cbdc50251e0')

prepare() {
	cd "$pkgname-$pkgver"
	runhaskell Setup configure --prefix=/usr --docdir="/usr/share/doc/${pkgname}" -O
}

build() {
	cd "$pkgname-$pkgver"
	runhaskell Setup -v build
}

package() {
	cd "$pkgname-$pkgver"
	runhaskell Setup copy --destdir="${pkgdir}"
}
